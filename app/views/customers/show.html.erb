

<%= render @customer %>

<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer) %> |
  <%= link_to "Back to customers", customers_path %>

  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#myModal-<%= @customer.id %>">
    Delete this customer
  </button>
</div>

<%= render partial: 'deleteModal', locals: { customer: @customer } %>

<% if @customer.orders.any? %>
  <h3>Orders for <%= @customer.full_name %></h3>

  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th class="ps-5">Count</th> 
      </tr>
    </thead>

    <tbody>
      <% @customer.orders.each do |order| %>
        <tr>
          <td><%= order.product_name %></td>
          <td class="ps-5"><%= order.product_count %></td>
          <td class="ps-5"><%= button_to 'Show', order_path(order), class: "btn btn-primary btn-sm me-2" %></td>
          <td><%= button_to 'Edit', edit_order_path(order), class: "btn btn-secondary btn-sm  me-2"  %></td>
          <td><%= button_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>This customer has no orders.</p>
<% end %>
